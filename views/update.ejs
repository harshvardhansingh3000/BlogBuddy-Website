    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Clicker+Script&family=Dancing+Script:wght@400..700&family=Libre+Caslon+Text:wght@700&family=Major+Mono+Display&family=Noto+Emoji:wght@300..700&family=Noto+Serif+Display:ital,wght@0,100..900;1,100..900&family=Seaweed+Script&family=Truculenta:opsz,wght@12..72,100..900&display=swap"
        rel="stylesheet">
    <style>
        .dancing-script {
            font-family: "Dancing Script", cursive;
            font-optical-sizing: auto;
            font-weight: 700;
            font-style: normal;
        }

        p[draggable] {
            color: #000F6B;
            font-size: x-large;

        }

        .modern-antiqua-regular {
            font-family: "Modern Antiqua", serif;
            font-weight: 400;
            font-style: normal;
        }
 
        body {
            background-image: url("/images/introBackground.png");
            background-repeat: no-repeat;
        }

        form>div {
            display: grid;
            grid-template-columns: 1fr 1fr 1fr 1fr;
            grid-template-rows: 1fr 1fr 1fr 1fr 1fr;
        }

        form>div>.one {
            grid-area: 1/2/2/4;
        }

        form>div>.two {
            grid-area: 2/2/3/4;
        }

        form>div>.three {
            grid-area: 3/2/5/4;
        }

        form>div>.four {
            grid-area: 5/2/6/4;

        }
        
        input,
        label,
        textarea {
            font-family: "Modern Antiqua", serif;
            font-weight: 400;
            font-style: normal;
            color: #000F6B;
        }
    </style>
</head>

<body>
    <div class="container">
        <header class="d-flex flex-wrap justify-content-center py-3 mb-4 border-bottom">
            <a href="/"
                class="d-flex align-items-center mb-3 mb-md-0 me-md-auto link-body-emphasis text-decoration-none">
                <svg class="bi me-2" width="40" height="32">
                    <use xlink:href="#bootstrap"></use>
                </svg>
                <span style="color:#000F6B" class="fs-4 modern-antiqua-regular">BlogBuddy</span>
            </a>

            <ul class="nav nav-pills">
                <li class="nav-item"><a style="color:#000F6B" href="/" class="nav-link modern-antiqua-regular"
                        aria-current="page">Home</a>
                </li>
                <li class="nav-item"><a style="color:#000F6B" href="/view"
                        class="nav-link modern-antiqua-regular">View</a></li>
                <li class="nav-item"><a style="color:#000F6B" href="/create"
                        class="nav-link modern-antiqua-regular">Create</a></li>

            </ul>
        </header>
    </div>
    <section>
        <div>
            <form action="/update/<%= blog.id %>" method="POST">
                <div>
                    <div class="form-floating mb-4 one">
                        <input type="text" name="name" class="form-control modern-antiqua-regular" id="floatingInput"
                            placeholder="Your Name" value="<%= blog.name %>" required>
                        <label for="floatingInput">Name</label>
                    </div>
                    <div class="form-floating mb-4 two">
                        <input type="text" name="title" class="form-control" id="floatingInput" placeholder="Blog title" value="<%= blog.title %>"
                            required>
                        <label for="floatingInput">Title</label>
                    </div>
                    <div class="mb-4 three">
                        <label class="form-label">The Blog</label>
                        <textarea class="form-control" name="blog" rows="4" required><%= blog.blog %></textarea>
                    </div>
                    <div class="four">
                        <button type="submit" class="btn btn-outline-info modern-antiqua-regular">Update</button>

                    </div>
                </div>
            </form>
            
        </div>

    </section>

